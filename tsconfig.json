{
  "buildOnSave": false,
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": "src",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2016", "dom"],
    "moduleResolution": "node",
    "module": "commonjs",
    "noEmitHelpers": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "transpiled",
    "pretty": true,
    "removeComments": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "sourceMap": true,
    "strictNullChecks": false,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "angular",
      "angular-mocks",
      "jasmine",
      "jquery",
      "node",
      "webpack",
      "webpack-env"
    ]
  },
  "exclude": [
    "build",
    "node_modules",
    "transpiled"
  ],
  "include": [
    "src/**/*.ts"
  ]
}
